{
  "manifest_version": 3,
  "name": "browser-extension-tbcp",
  "version": "0.0.1",
  "short_name": "Browser Extension with Web-Ext",
  "description": "How to Build and Publish Browser Extension with Web-Ext Svelte TypeScript Webpack",
  "author": "Bootcamp contributors <contributors@bootcamp-project.com>",
  "homepage_url": "https://gitlab.com/the-bootcamp-project/boilerplates/browser-extension",
  "default_locale": "en",

  "action": {
    "default_icon": {},
    "default_title": "Beastify",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "devtools_page": "devtools-page.html",
  "permissions": [
    "activeTab",
    "alarms",
    "clipboardWrite",
    "cookies",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "clipboardRead",
    "downloads",
    "downloads.open",
    "geolocation",
    "idle",
    "management",
    "notifications",
    "privacy",
    "topSites",
    "nativeMessaging",
    "contextMenus",
    "bookmarks",
    "browsingData",
    "history",
    "identity",
    "sessions"
  ],
  "optional_permissions": [],
  "content_security_policy": {
    "extension_pages": "base-uri 'self'; default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self'; connect-src 'self'; font-src 'self'; object-src 'self'; media-src 'self'; frame-src 'self'; child-src 'self'; form-action 'self'; frame-ancestors 'none'; prefetch-src 'none';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "all_frames": false,
    "js": ["browser-polyfill.min.js","contentScripts.js"],
    "css": [],
    "run_at": "document_idle",
    "matches": ["<all_urls>"],
    "match_about_blank": false,
    "exclude_matches": ["*://developer.mozilla.org/*"],
    "include_globs": ["*://*"],
    "exclude_globs": ["*://developer.mozilla.org/*"]
  }],
  "incognito": "spanning",
  "web_accessible_resources": [],
  "omnibox": {
    "keyword": "mdn"
  }
}
