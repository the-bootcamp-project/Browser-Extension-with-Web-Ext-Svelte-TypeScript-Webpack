{
  "manifest_version": 2,
  "name": "browser-extension-tbcp",
  "version": "0.0.1",
  "short_name": "Browser Extension with Web-Ext",
  "description": "How to Build and Publish Browser Extension with Web-Ext Svelte TypeScript Webpack",
  "author": "Bootcamp contributors <contributors@bootcamp-project.com>",
  "homepage_url": "https://gitlab.com/the-bootcamp-project/boilerplates/browser-extension",
  "default_locale": "en",

  "browser_action": {
    "default_title": "Beastify",
    "default_popup": "popup.html"
  },
  "page_action": {
    "default_icon": {},
    "default_title": "Beastify",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "clipboardWrite",
    "cookies",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "unlimitedStorage",
    "clipboardRead",
    "downloads",
    "downloads.open",
    "geolocation",
    "idle",
    "management",
    "notifications",
    "privacy",
    "topSites",
    "proxy",
    "browserSettings",
    "contextualIdentities"
  ],
  "optional_permissions": [],
  "content_security_policy": "base-uri 'self'; default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self'; connect-src 'self'; font-src 'self'; object-src 'self'; media-src 'self'; frame-src 'self'; child-src 'self'; form-action 'self'; frame-ancestors 'none'; prefetch-src 'none';",
  "background": {
    "scripts": ["browser-polyfill.min.js","background.js"]
  },
  "content_scripts": [{
    "all_frames": false,
    "js": ["browser-polyfill.min.js","contentScripts.js"],
    "css": [],
    "run_at": "document_idle",
    "matches": ["<all_urls>"],
    "match_about_blank": false,
    "exclude_matches": ["*://developer.mozilla.org/*"],
    "include_globs": ["*://*"],
    "exclude_globs": ["*://developer.mozilla.org/*"]
  }],
  "user_scripts": {
    "api_script": "apiscript.js"
  },
  "incognito": "spanning",
  "web_accessible_resources": []
}
